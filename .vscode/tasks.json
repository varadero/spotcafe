{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "taskName": "AngularCLI",
            "options": {
                "cwd": "${workspaceRoot}/web"
            },
            "command": "ng",
            "args": [
                "build",
                "--watch"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [
                "$tsc-watch"
            ]
        },
        {
            "type": "typescript",
            "label": "TypeScript",
            "tsconfig": "server\\tsconfig.json",
            "option": "watch",
            "problemMatcher": [
                "$tsc-watch"
            ]
        }
    ]
}